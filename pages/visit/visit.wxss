.visitPage {
  width: 100%;
  height: 100vh;
  /* background-color: red; */
  background-image: url(https://cmei.dmeit.cn/bgdao.jpg);
  background-size: 100% 100%;
  overflow: hidden;
  position: relative;
}

.visitPageSon {
  width: 700rpx;
  height: 468rpx;
  position: absolute;
  background-color: #ffd12f;
  background-size: 100% 100%;
  border-radius: 20rpx;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0rpx 10rpx;
  align-content: flex-start;
  bottom: 130rpx;
  left: 50%;
  margin-left: -350rpx;
  border: 10rpx solid #fff;
}

.visitPageSonlist {
  width: 145rpx;
  height: 145rpx;
  background-color: #fff;
  flex-shrink: 0;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
  margin-left: 18rpx;
  float: left;
}

.visitPageSonlistImg {
  width: 100%;
  height: 145rpx;
  background-color: #fff;
  text-align: center;
}

.visitPageSonlistImg>image {
  width: 100%;
}

.visitPageSonlistTxt {
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 42rpx;
  background-color: #4C49DE;
  z-index: 999;
  text-align: center;
  line-height: 42rpx;
  font-size: 24rpx;
  color: #fff;
}

