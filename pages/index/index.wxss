}

.homeShare {
  width: 50rpx;
  height: 55rpx;
  flex-shrink: 0
}

.homeShare>image {
  width: 100%;
  height: 100%
}

.homeSearchIcon {
  width: 42rpx;
  height: 45rpx;
  flex-shrink: 0
}

.homeSearchIcon>image {
  width: 100%;
  height: 100%
}

.homeSwiper {
  height: 185rpx;
  background-color: #e1e1e1;
  border-radius: 20rpx;
