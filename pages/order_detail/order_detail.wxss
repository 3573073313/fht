/* pages/order_detail/order_detail.wxss */
@import "../reflect/reflect.wxss";
.orderDetailPage {
  width: 100%;
  height: 100vh;
  background-color: #fff;
}

.orderDetailPageSon {
  width: 100%;
  height: 105rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1rpx solid #EEEEEE;
  box-sizing: border-box;
  padding: 0rpx 35rpx;
}

.orderDetailPageSonName {
  width: 200rpx;
  height: 105rpx;
  flex-shrink: 0;
  font-size: 32rpx;
  line-height: 105rpx;
  color: #222;
}

.orderDetailPageSonName>image {
  width: 37rpx;
  height: 35rpx;
  vertical-align: middle;
  margin-top: -8rpx;
  margin-right: 18rpx;
}

.orderDetailPageSonCnt {
  width: 100%;
  height: 105rpx;
  line-height: 105rpx;
  text-align: right;
  color: #333;
}